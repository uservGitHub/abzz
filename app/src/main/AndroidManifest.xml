<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="gxd.book">
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!--<uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />-->
    <application
        android:name=".BookApplication"
	    android:theme="@style/AppTheme"
        android:allowBackup="true">
        <activity android:name=".test.BaseMessageActivity"/>
        <activity android:name=".utils.RequestStorage"/>
        <activity android:name=".utils.FileRootActivity"/>
        <activity android:name=".utils.PdfActivity"/>
        <activity android:name=".test.TestApi"/>
        <activity android:name=".utils.ManagedHostActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"/>
        <!--BookBootstrapActivity-->
        <activity
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:windowSoftInputMode="adjustNothing|stateAlwaysHidden"
            android:name=".test.TestManagedHost">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>